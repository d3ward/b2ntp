{
  "manifest_version": 2,
  "name": "b2ntp",
  "description": "Simple and powerful New Tab Page with your bookmarks",
  "version": "1.0.0",
  "incognito": "split",
  "chrome_url_overrides": {
    "newtab": "blank.html"
  },
  "browser_action": {
        "default_icon": {
          "16": "./src/16x16.png",
          "48": "./src/48x48.png",
          "128": "./src/128x128.png",
          "512": "./src/512x512.png"
        }
      },
  "permissions": [
    "bookmarks"
  ]
}
